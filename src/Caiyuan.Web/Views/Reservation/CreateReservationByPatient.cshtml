@using Caiyuan.ViewModels.Reservation;
@model ReservationViewModel

@{
    ViewData["Title"] = "创建预约";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-8">
        <section>
            <form asp-controller="Reservation" asp-action="CreateReservationByPatient"   method="post" class="form-horizontal">
              
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
               
                 <div class="form-group">
                    <label asp-for="Objects" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Objects" class="form-control" />
                        <span asp-validation-for="Objects" class="text-danger"></span>
                    </div>
                </div>
                
 
                <div class="form-group">
                    <label asp-for="DateTime" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="DateTime" class="form-control"  rows="2"></input>
                        <span asp-validation-for="DateTime" class="text-danger"></span>
                    </div>
                </div>
 

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn  btn-primary">保存</button>
                        <a asp-controller="clinic" asp-action="index" class="btn btn-default" >取消</a>
                    </div>
                </div>
              
            </form>
        </section>
    </div>
     
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}