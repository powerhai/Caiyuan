@using Caiyuan.ViewModels.Doctor;
@model DoctorViewModel

@{
    ViewData["Title"] = "我是农民";
}

<h2>@ViewData["Title"]</h2>
<div class="row">
    <div class="col-md-8">
        <section>
            <form asp-controller="Doctor" asp-action="CreateDoctor"   method="post" class="form-horizontal">
                <h4>补充职业相关资料.</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
               
                 <div class="form-group">
                    <label asp-for="Name" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Position" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Position" class="form-control"/>
                        <span asp-validation-for="Position" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Level" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Level" class="form-control"/>
                        <span asp-validation-for="Level" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="School" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="School" class="form-control"  rows="2"></input>
                        <span asp-validation-for="School" class="text-danger"></span>
                    </div>
                </div>

                <p><br/></p>
                <div class="form-group">
                    <label asp-for="Experience" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <textarea asp-for="Experience" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Experience" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <button type="submit" class="btn  btn-primary" >创建</button>
                    </div>
                </div>
              
            </form>
        </section>
    </div>
     
</div>

 
 

@section Scripts {
@{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

 
                                                                }